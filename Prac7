//sección de librerias
#include<stdio.h>
//declaracoión de funciones
int main(){
	
//declaración de variables enteras, flotantes y de caracteri
int TotalDeInversion=0;
int A=1;
int Mes=1;
float Deposito;
float InteresFijo;
float B;
char si;
char Opcion;
	//contador de Mes de 1 hasta 12
	for(Mes=1;Mes<=12;Mes=Mes+1){  
	//Operaciones para guardar el deposito que se va ingresando en el año cada mes
		printf("Ingresar monto del mes %d:",Mes);
		scanf("%f",&Deposito);
		TotalDeInversion=Deposito+TotalDeInversion;
		}
	//Operaciones para sacar la inversion total más el interes
	InteresFijo=TotalDeInversion*.10;
	B=TotalDeInversion+InteresFijo;
	printf("El total de inversion en el año %d ",A);
	printf("fue %f \n",B);
}
